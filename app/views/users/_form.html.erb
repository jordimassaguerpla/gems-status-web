<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if !CONFIG['GITHUB_INTEGRATION'] %>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %><br>
      <%= f.label :email %><br>
      <%= f.text_field :email %><br>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %>
    </div>
  <% end %>
  <div class="field">

    <%= f.check_box(:admin) %>
    <%= f.label(:admin, "Is admin?") %>
</div>
  <div class="field">
    <%= f.check_box(:role) %>
    <%= f.label(:role, "security team") %>
</div>
  <div class="field">
    <%= f.check_box(:beta_user) %>
    <%= f.label(:beta_user, "beta user") %>
</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
